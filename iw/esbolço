const certa = document.querySelector('.certo')

const certa1 = certa.innerText.toLowerCase()

const resposta = document.querySelector('.resposta')


const teste = document.querySelector('.teste')

const teste1 = teste.innerText.toLowerCase();

if(certa1.includes(teste1) == true){
 resposta.innerText = 'certo'
} else{
 resposta.innerText = 'errado'

}



